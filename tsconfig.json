{
    "compilerOptions": {
        "incremental": false,
        "moduleResolution": "node",
        "inlineSources": false,
        "removeComments": true,
        "sourceMap": false,
        "target": "ES6",
        "skipLibCheck": true,
        "lib": ["ESNEXT", "DOM"],
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "strict": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
}
